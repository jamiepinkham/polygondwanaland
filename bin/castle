#!/usr/bin/env bash
set -euo pipefail

COMMAND="${1:-}"
shift || true

source "$(dirname "$0")/lib.sh"

usage() {
  cat <<EOF
ðŸ° Polygondwanaland CLI - "castle"

Usage:
  castle.sh up [project] [-- docker-compose args...]
  castle.sh down [project] [-- docker-compose args...]
EOF
}

cmd_up() { ./bin/helpers/up "$@"; }
cmd_down() { ./bin/helpers/down "$@"; }

case "$COMMAND" in
  up) cmd_up "$@";;
  down) cmd_down "$@";;
  *) usage; exit 1;;
esac
